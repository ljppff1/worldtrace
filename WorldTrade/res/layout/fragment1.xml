
<com.example.view.StickyScrollView
    android:id="@+id/ScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
   android:fillViewport="true"
       android:background="@drawable/aa1"
    android:layout_height="fill_parent" >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
              
    
   >
     <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="180dp"
       >
    <com.tianshicoffeeom.app.imgscroll.MyImgScroll
        android:id="@+id/myvp"
        android:layout_width="fill_parent"
        android:layout_height="180dp" />
         
        
    
    <LinearLayout
        android:id="@+id/vb"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
    </LinearLayout>
</RelativeLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="85dp"
    android:orientation="vertical"
    android:tag="sticky"
        android:id="@+id/mLLw"
    
    android:background="@drawable/ra6"
    >
     <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
        android:padding="6dp"
         >
         <ImageView 
             android:layout_width="26dp"
             android:layout_height="26dp"
             android:src="@drawable/aa4"
             android:scaleType="fitXY"
             android:layout_marginRight="8dp"
             android:layout_alignParentRight="true"
             android:id="@+id/mIvaa4"
             />
                  <ImageView 
             android:layout_width="26dp"
             android:layout_height="26dp"
                          android:scaleType="fitXY"
             android:layout_marginRight="8dp"
             android:src="@drawable/aa3"
             android:layout_toLeftOf="@id/mIvaa4"
             android:id="@+id/mIvaa3"
             />
         <ImageView
             android:id="@+id/mIvaa2"
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:layout_marginLeft="8dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:scaleType="fitXY"
             android:src="@drawable/aa2" />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/mIvaa2"
             android:layout_toLeftOf="@id/mIvaa3"
             android:text="@string/abc82"
             android:layout_centerVertical="true"
             android:textColor="@color/black"
             />

         
         </RelativeLayout>
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <RelativeLayout 
           android:layout_width="0dp"
           android:layout_weight="1"    
           android:layout_marginRight="5dp"
                      android:layout_marginLeft="5dp"
           
           android:id="@+id/mRlf11"
           android:layout_height="wrap_content"
           android:background="@drawable/aa7"
              >
             <TextView 
              android:layout_width="fill_parent"
              android:gravity="center"
              android:paddingTop="2dp"
              android:id="@+id/mTvw1"
              android:textSize="20sp"
              android:textColor="@color/black"
              android:layout_height="wrap_content"
              android:text="@string/aa1"
              />
          </RelativeLayout>
          <RelativeLayout 
           android:layout_width="0dp"
           android:layout_marginRight="5dp"
                      android:layout_marginLeft="5dp"
                      android:id="@+id/mRlf12"
           android:layout_weight="1"    
           android:layout_height="wrap_content"
           android:background="@drawable/ra2"
              >
           <TextView 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:id="@+id/mTvw2"
              
                            android:gravity="center"
               android:paddingTop="2dp"
              android:text="@string/aa2"
              />
              
          </RelativeLayout>
          </LinearLayout>
          </LinearLayout>
     <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         >
     <com.example.view.MyListView 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:id="@+id/mLvf11"
                     android:visibility="gone"
         
         ></com.example.view.MyListView>
           <ProgressBar
            android:id="@+id/progressBar_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
     
        <TextView
            android:id="@+id/tv_noresut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="無相關搜索結果"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceMedium" />
     </RelativeLayout>

</LinearLayout>
</com.example.view.StickyScrollView>