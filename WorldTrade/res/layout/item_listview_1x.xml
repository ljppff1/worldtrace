<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/iv_listview_rent_pic"
            android:layout_width="120dp"
         android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:background="@drawable/a" />
          <TextView 
              android:text="@string/abc83"
              android:textSize="15sp"
              android:textColor="@color/black"
              android:id="@+id/mTvri10"
              android:layout_marginTop="10dp"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              />
        
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:id="@+id/mRL_listview_rent_2"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/mTvri10"
            android:layout_toRightOf="@+id/iv_listview_rent_pic" >
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >
              <TextView 
                                android:text=""
              android:textSize="18sp"
              android:textColor="@color/black"
              android:id="@+id/mTvri11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  
                  />
              <RelativeLayout 
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  >
                    <TextView 
              android:textSize="18sp"
              android:textColor="@color/black"
              android:id="@+id/mTvri121"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  android:text="@string/zg20"
                  />
                  
              <TextView 
                                android:text=""
              android:textSize="18sp"
              android:layout_marginLeft="5dp"
              android:textColor="@color/black"
              android:id="@+id/mTvri12"
              android:layout_toRightOf="@id/mTvri121"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  
                  />
              </RelativeLayout>
              </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>