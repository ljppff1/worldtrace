<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/ax7"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <ImageView
            android:id="@+id/iv_listview_rent_pic"
            android:layout_width="100dp"
         android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:background="@drawable/a" />

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:id="@+id/mRL_listview_rent_2"
            android:layout_height="wrap_content"
            
           android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_listview_rent_pic" >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
               android:id="@+id/mTvri10"
                
                >
                <ImageView 
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ax5"
                    android:layout_gravity="center_horizontal"
                    
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/ax1"
                    />
                <ImageView 
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ax6"
                    android:layout_gravity="center_horizontal"
                    
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/ax2"
                    />
                </LinearLayout>
            
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_toLeftOf="@id/mTvri10"
              >
              <TextView 
                                android:text="####"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:id="@+id/mTvri11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  
                  />
              <TextView 
                                android:text="@string/ax3"
              android:textSize="16sp"
              android:textColor="@color/black"
              android:id="@+id/mTvri12"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  
                  />
              <TextView 
                                android:text="@string/ax4"
              android:textSize="14sp"
              android:textColor="@color/black"
              android:id="@+id/mTvri13"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  
                  />
              </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>